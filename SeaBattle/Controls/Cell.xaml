<UserControl x:Class="SeaBattle.Controls.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattle.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <Grid Name="MyGrid" MouseEnter="Grid_MouseEnter" MouseLeave="MyGrid_OnMouseLeave" MouseDown="MyGrid_MouseDown" Background="white">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="25"/>
    </Grid>
</UserControl>
